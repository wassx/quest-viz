{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "ES7",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
//    "node_modules/**/*.d.ts",
    "dist"
  ]
}
